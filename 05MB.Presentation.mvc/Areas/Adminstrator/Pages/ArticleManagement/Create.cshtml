@page
@model _05MB.Presentation.mvc.Areas.Adminstrator.Pages.ArticleManagement.CreateModel
@{
}

<div class="card">
    <div class="card-header">
        <h2>Create New Article</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="Title" class="control-label">Title:</label>
                            <input name="Title" id="Title" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="Img" class="control-label">Image:</label>
                            <input name="Img" id="Img" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="ShortDescription" class="control-label">Short description:</label>
                            <textarea name="ShortDescription" id="ShortDescription" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="Content" class="control-label">Content:</label>
                            <textarea name="Content" id="Content" class="form-control" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="ArticleCategoryId" class="control-label">Article Category:</label>
                            <select asp-items="@Model.articleCategories" name="ArticleCategoryId" id="ArticleCategoryId" class="form-control">
                                <option value="0">Select Article category</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="Adminstrator">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
